---
import ContentSection from "~/components/content-section.astro";
import { Lightbulb, Building, Cpu, Sparkles, Camera, BadgeCheck } from "lucide-react";

const features = [
  {
    title: "고품질 광섬유 조명 시공",
    description:
      "감각적인 공간 연출을 위한 인테리어용 광섬유 조명 설계 및 시공",
    icon: Lightbulb,
  },
  {
    title: "상업 공간 인테리어 전문",
    description:
      "호텔, 클리닉, 레스토랑 등 공간 성격에 맞춘 감각적인 시공",
    icon: Building,
  },
  {
    title: "스마트 조명 & 전기 설비",
    description:
      "맞춤형 조명 설계 및 안전한 전기 시스템 시공",
    icon: Cpu,
  },
  {
    title: "현장 기반 제안력",
    description:
      "수십 건의 시공 경험을 바탕으로 실용적이고 창의적인 제안",
    icon: Sparkles,
  },
  {
    title: "시공 전·후 비교 관리",
    description:
      "디테일한 시공 기록과 철저한 품질 관리",
    icon: Camera,
  },
  {
    title: "신뢰와 품질 보증",
    description:
      "체계적인 프로세스와 지속적인 사후관리",
    icon: BadgeCheck,
  },
];
---

<ContentSection title="Why Choose FIKO?" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      features.map(({ title, description, icon: Icon }) => (
        <li class="flex flex-col items-center gap-3 p-4 border border-gray-200 rounded-md hover:shadow-md transition-shadow duration-300">
          <Icon class="w-8 h-8 text-gray-700" />
          <p class="text-center font-bold text-base">{title}</p>
          <p class="text-center text-gray-600 text-xs break-keep leading-snug whitespace-normal">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
